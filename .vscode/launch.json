{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": { "PYTHONPATH": "${workspaceFolder}" }
        },
        {
            "name": "C/C++ debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/std/src/main.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/std/src",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++ build"
        }
   ]
}